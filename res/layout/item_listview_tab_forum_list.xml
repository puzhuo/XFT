<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/thumb"
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:src="@drawable/test"
        android:scaleType="centerCrop" />
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumb"
        android:text="may the force be with you"
        android:textSize="13sp"/>
    
    <TextView 
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumb"
        android:layout_toRightOf="@+id/thumb"
        android:layout_marginRight="10dip"
        android:text="拉拉啦"
        android:textSize="10sp"/>
        
    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumb"
        android:layout_toRightOf="@+id/user_name"
        android:text="04-25 11:33"
        android:textSize="10sp" />
    
    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumb"
        android:layout_alignParentRight="true"
        android:text="6"
        android:textSize="10sp"
        android:textColor="#555555"/>
    
    <ImageView
        android:id="@+id/comment_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/comment_count"
        android:layout_alignBottom="@+id/comment_count"
        android:layout_toLeftOf="@+id/comment_count"
        android:layout_marginRight="-10dip"
        android:src="@drawable/tab_forum_comment_count" />

</RelativeLayout>
