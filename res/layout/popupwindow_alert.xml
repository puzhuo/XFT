<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="10dip" >
    
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认退出当前账号?退出后，将无法惊醒查看订单，发帖，评论等操作!"
        android:textSize="11sp"
        android:background="@drawable/background_round_corner_white_shadow"/>
    
    <Button 
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="退出当前账号"
        android:textSize="18sp"
        android:textColor="@color/global_highlight_color"
        android:background="@drawable/selector_round_corner_white"/>
    
    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="取消"
        android:textSize="18sp"
        android:textColor="#00AAFF"
        android:background="@drawable/selector_round_corner_white" />

</LinearLayout>
