<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.pz.xingfutao.widget.FitWidthImageView
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumb"
            android:orientation="horizontal"
            android:background="#80000000" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:padding="10dip"
                android:gravity="center"
                android:text="啦拉啦拉啦拉啦拉啦拉啦"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:ellipsize="marquee" />
            
            <View 
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:background="#FFFFFF"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:padding="6dip"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$10.00"
                    android:textColor="@color/global_highlight_color"
                    android:textSize="16sp" />
                
                <TextView
                    android:id="@+id/origin_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$20.00"
                    android:textColor="#AAAAAA" />
                
            </LinearLayout>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip"
            android:background="@drawable/selector_round_corner_purchase">
            
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/detail_purchase" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
                
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip"
            android:background="@drawable/selector_round_corner_cart" >
            
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/detail_add_to_cart" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>